<script type="text/javascript">

    // Load the Visualization API and the piechart package.
    google.load('visualization', '1.0', {'packages': ['corechart']});

    // Set a callback to run when the Google Visualization API is loaded.
    google.setOnLoadCallback(drawChart);


    // Listen for the 'select' event, and call my function selectHandler() when
    // the user selects something on the chart.


    // Callback that creates and populates a data table,
    // instantiates the pie chart, passes in the data and
    // draws it.
    function drawChart() {


        // Create the data table.
        var data = new google.visualization.DataTable();
        data.addColumn('string', 'Topping');
        data.addColumn('number', 'Slices');
        data.addRows([
            {% for item in counted_data["current"] %}
            {% for data in item %}
            ["{{ data["priorityName"] }}", {{ data["count"] }}],
            {% endfor %}
            {% endfor %}
        ]);
        ;


        // Set chart options
        var options = {'title': 'LOGS',
            'width': 600,
            'height': 400};

        // Instantiate and draw our chart, passing in some options.
        var chart = new google.visualization.PieChart(document.getElementById('chart_div'));
        google.visualization.events.addListener(chart, 'select', selectHandler);

        function selectHandler() {
            var selectedItem = chart.getSelection()[0];
            if (selectedItem) {
                var value = data.getValue(selectedItem.row, 0);

                var notif = document.getElementById("bloc-notif");
//

                var cls = document.getElementsByClassName(value);

                console.log(cls);
                for (var li in cls) {
                    cls[li].style.display = "block";
                    if (cls[li] && cls[li].style) {
                        cls[li].style.display = "none";
                    }
                }


            }
        }
        chart.draw(data, options);
    }
</script>
